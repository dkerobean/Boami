# Production Environment Configuration for Subscription Payment System

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/production_db?retryWrites=true&w=majority
MONGODB_DB_NAME=production_db

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://username:password@redis-host:6379
REDIS_PASSWORD=your-redis-password

# Authentication Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-key-min-32-chars
JWT_SECRET=your-jwt-secret-key-for-token-signing

# Flutterwave Configuration (Production)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your-production-public-key
FLUTTERWAVE_SECRET_KEY=FLWSECK-your-production-secret-key
FLUTTERWAVE_ENCRYPTION_KEY=your-production-encryption-key
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret-hash
FLUTTERWAVE_ENVIRONMENT=live

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_SECRET=your-webhook-verification-secret
ALLOWED_WEBHOOK_IPS=52.214.14.220,52.49.173.169,52.214.14.217

# Email Configuration (Resend)
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Security Configuration
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
SESSION_SECRET=your-session-secret-key

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Cron Job Security
CRON_SECRET=your-cron-job-secret-key

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
DATABASE_POOL_SIZE=10

# Feature Flags
ENABLE_SUBSCRIPTION_ANALYTICS=true
ENABLE_PAYMENT_MONITORING=true
ENABLE_WEBHOOK_RETRY=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
WEBHOOK_ALERT_URL=https://your-monitoring-service.com/webhook

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL=3600
SUBSCRIPTION_CACHE_TTL=1800
PLAN_CACHE_TTL=7200